<div class="articles">

<h1>Articles</h1>

<div class="container-fluid">
  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-md-4 col-xs-12 articles">
        <%= image_tag(article.image_url, class: "img-responsive") %>
        <a href="#"><h1><%= article.name %></h1></a>
        <p><%= article.description %></p>
      </div><!-- /col -->
    <% end %>
  </div>
</div>  






</div>

